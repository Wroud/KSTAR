@model IEnumerable<FSubject>

@{
    ViewData["Title"] = "ForumSubjects";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@ViewData["Title"] <br /><small class="text-danger">@ViewData["ErrorMessage"]</small></h3>
    </div>
</div>
<table class="table table-bordered">
    <tr>
        <th width="60px"></th>
        <th>
            Заголовок
        </th>
        <th>
            Описание
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.Icon)
                <a asp-action="ForumEditSubject" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a>
                <a asp-action="ForumDeleteSubject" asp-route-id="@item.ID"><i class="fa fa-close"></i></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
    }
</table>
