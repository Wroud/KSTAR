@model KSTAR.Models.FTopic

@{
    ViewData["Title"] = "ForumEditTopic";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@ViewData["Title"]. <br /> <small>Create a new forum group.</small></h3>
    </div>
</div>
<form asp-action="ForumEditTopic">
    <div class="form-horizontal">
        <h4>FTopic</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="UserID" />
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Message" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SubjectID" class="control-label col-md-2">SubjectID</label>
            <div class="col-md-10">
                <select asp-for="SubjectID" asp-items="ViewBag.Subjects" class="form-control"></select>
                <span asp-validation-for="SubjectID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
