@model IEnumerable<KSTAR.Models.FTopic>

@{
    ViewData["Title"] = "ForumTopicList";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@ViewData["Title"] <br /><small class="text-danger">@ViewData["ErrorMessage"]</small></h3>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            Автор
        </th>
        <th>
            Раздел
        </th>
        <th>
            Название
        </th>
        <th>
            Просмотры
        </th>
        <th>
            Комментарии
        </th>
        <th>
            Опубликовано
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.Raw(item.Subject.Icon)
                @Html.DisplayFor(modelItem => item.Subject.Title)
            </td>
            <td>
                <h5>
                    @Html.DisplayFor(modelItem => item.Title)
                    <br />
                    <small>@Html.DisplayFor(modelItem => item.Description)</small>
                </h5>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="ForumEditTopic" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="ForumDeleteTopic" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
</table>
