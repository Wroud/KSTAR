@using System.Security.Claims
@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<KSTAR.Models.ApplicationUser>

@{
    ViewData["Title"] = "Cписок пользователей";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]</h1>
    </div>
</div>
<table class="table table-bordered">
    <tr>
        <th>
            Логин
        </th>
        <th>
            Права
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Ошибок входа
        </th>
        <th>
            Номер телефона
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @foreach(var c in item.Claims.Where(c => c.ClaimType == ClaimTypes.Role).Select(c => c.ClaimValue))
                {
                    <span class="label label-default">@c</span>
                }
            </td>
            <td class="@(item.EmailConfirmed ? "bold" : "")">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessFailedCount)
            </td>
            <td class="@(item.PhoneNumberConfirmed ? "bold" : "") text-right">
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
