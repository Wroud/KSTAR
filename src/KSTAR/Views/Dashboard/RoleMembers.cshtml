@using System.Security.Claims
@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<KSTAR.Models.ApplicationUser>

@{
    //ViewData["Title"] = "Cписок пользователей";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"] <br /><small>Cписок участников</small></h1>
    </div>
</div>
<table class="table table-bordered">
    <tr>
        <th>
            Логин
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Номер телефона
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td class="@(item.EmailConfirmed ? "bold" : "")">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="@(item.PhoneNumberConfirmed ? "bold" : "") text-right">
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Исключить</a>
            </td>
        </tr>
    }
</table>
