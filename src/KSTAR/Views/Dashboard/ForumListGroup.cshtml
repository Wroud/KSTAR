@model IEnumerable<KSTAR.Models.FGroup>

@{
    ViewData["Title"] = "FGroups";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@ViewData["Title"] <br /><small class="text-danger">@ViewData["ErrorMessage"]</small></h3>
    </div>
</div>
<table class="table table-bordered">
    <tr>
        <th>
            Название
        </th>
        <th>
            Тем
        </th>
        <th>
            Описание
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subjects.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a asp-action="ForumEditGroup" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a>
            <a asp-action="ForumDeleteGroup" asp-route-id="@item.ID"><i class="fa fa-close"></i></a>
        </td>
    </tr>
}
</table>
